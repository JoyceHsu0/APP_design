<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    android:background="#F4EBCC">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"

        />
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:layout_marginTop="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="SpeakableTextPresentCheck"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btncheckin"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewPager"
        android:layout_marginTop="5dp"
        android:layout_marginStart="80dp"
        android:text="CHECK IN"
        android:textSize="18sp"
        android:fontFamily="@font/amarante"
        android:textColor="#383838"
        android:background="#DCD0A8"
        />

    <TextView
        android:id="@+id/txtcheckin"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btncheckin"
        android:layout_marginTop="8dp"
        android:layout_marginStart="86dp"
        android:text="01 / 01"
        android:fontFamily="@font/amarante"
        android:textColor="#24291A"
        android:textSize="26sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btncheckout"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/viewPager"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="80dp"
        android:text="CHECK OUT"
        android:textSize="18sp"
        android:fontFamily="@font/amarante"
        android:textColor="#383838"
        android:background="#DCD0A8"
        />

    <TextView
        android:id="@+id/txtcheckout"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btncheckout"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="78dp"
        android:text="01 / 01"
        android:fontFamily="@font/amarante"
        android:textColor="#24291A"
        android:textSize="26sp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_below="@id/viewPager"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="120dp"
        android:background="@drawable/bg_login_btn"
        android:text="submit"
        android:textColor="@drawable/text_login_btn"
        android:textSize="22sp" />

  </RelativeLayout>